#:kivy 1.8.0

TestGame:

<TestGame>:
    gameworld: gameworld
    pos: root.pos
    size: root.size
    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        PositionSystem:
            system_id: 'position'
        RotateSystem:
            system_id: 'rotate'
        ColorSystem:
            system_id: 'color'
        CymunkPhysics:
            system_id: 'physics'
            gameworld: gameworld
        Renderer:
            gameworld: gameworld
            system_id: 'renderer'
            shader_source: 'assets/glsl/positionshader.glsl'
            atlas_dir: 'assets/'
            atlas: 'background_objects'
        GameView:
            system_id: 'default_gameview'
            focus_entity: False
            updateable: False
            gameworld: root.gameworld
            pos: root.pos
            do_scroll: False
            size: root.size
        ParticleManager:
            system_id: 'particles'
            gameworld: root.gameworld
            size: root.size
            max_number_particles: 1000
            render_information_from: 'renderer'
            physics_data_from: 'physics'
            pos: root.pos
            atlas_dir: 'assets/'
            atlas: 'particles'
            shader_source: 'assets/glsl/positionrotatecolorscaleshader.glsl'
        GameMap:
            system_id: 'map'
            map_size: root.size
    GameScreenManager:
        id: gamescreenmanager
        size: root.size
        pos: root.pos
        gameworld: gameworld

<GameScreenManager>:
    MainScreen:
        id: main_screen

<MainScreen@GameScreen>:
    name: 'main'
    FloatLayout:

