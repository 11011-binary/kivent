#:kivy 1.6.0
#:import Window kivy.core.window


GameWorld:

<GameWorld>:
	pos: root.pos
	size: root.size
	BoxLayout:
		Label:
			text: 'Game World'
		DebugPanel:
			pos: root.size[0] * .5, root.size[1] *.05
			size: (25, 25)
	BasicPositionSystem:
		pos: root.pos
		size: root.size
	QuadRenderer:
		pos: root.pos
		size: root.size
	CymunkPhysicsSystem:
		pos: root.pos
		size: root.size
	PhysicsRenderer:
		pos: root.pos
		size: root.size

<CymunkPhysicsSystem>:

<GameSystem>:

<DebugPanel>:
    Label:
        pos: root.pos
        size: root.size
        font_size: root.size[1]*.5
        halign: 'center'
        valign: 'middle'
        color: (1,1,1,1)
        text: 'FPS: ' + root.fps if root.fps != None else 'FPS:'

<QuadRenderer>:

<PhysicsRenderer>:



