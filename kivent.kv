#:kivy 1.6.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition 

GameWorld:

<GameWorld>:
	pos: root.pos
	size: root.size
	gamescreenmanager: gamescreenmanager
	BoxLayout:
		DebugPanel:
			pos: root.size[0] * .5, root.size[1] *.05
			size: (25, 25)
	GameScreenManager:
		id: gamescreenmanager
		gameworld: root
		transition: FadeTransition()
		pos: root.pos
		size: root.size
	GameView:
		gameworld: root
		pos: root.pos
		size: root.size
	BasicPositionSystem:
		gameworld: root
		pos: root.pos
		size: root.size
	QuadRenderer:
		gameworld: root
		pos: root.pos
		size: root.size
	CymunkPhysicsSystem:
		gameworld: root
		pos: root.pos
		size: root.size
	PhysicsRenderer:
		gameworld: root
		pos: root.pos
		size: root.size

<CymunkPhysicsSystem>:

<GameSystem>:

<DebugPanel>:
    Label:
        pos: root.pos
        size: root.size
        font_size: root.size[1]*.5
        halign: 'center'
        valign: 'middle'
        color: (1,1,1,1)
        text: 'FPS: ' + root.fps if root.fps != None else 'FPS:'

<QuadRenderer>:

<GameView>:

<PhysicsRenderer>:

<GameScreenManager>:
	current: 'main_game'
	MainMenuScreen:
	MainGameScreen:

<MainMenuScreen>:

	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: 'vertical'
		Label:
			text: 'Main Menu'
		Button:
			text: 'Play Game'
			on_press: root.manager.gameworld.state = 'main_game'



<MainGameScreen>:
	FloatLayout:
		size: root.size
		pos: root.pos
		Button:
			pos: (10, 10)
			size: (100, 100)
			size_hint: (None, None)
			text: 'Main Menu'
			on_press: root.manager.gameworld.state = 'main_menu'



